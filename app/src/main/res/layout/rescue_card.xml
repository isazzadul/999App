<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardId"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/button_green"
    android:padding="10dp"
    android:layout_margin="8dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/uniqueID"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:gravity="right"
        android:textSize="8sp"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="10"
        android:layout_marginTop="-5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6.5"
            app:srcCompat="@drawable/woman" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="3.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/victimName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="25sp"
                android:textColor="?android:textColorPrimaryDisableOnly"
                android:text="Sazzadul Islam" />

            <TextView
                android:id="@+id/cellNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:textColor="?android:textColorPrimaryDisableOnly"
                android:textSize="15sp"
                android:text="+880000000" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:textColor="?android:textColorPrimaryDisableOnly"
        android:gravity="center"
        android:layout_height="45dp"
        android:text="Comment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginBottom="-5dp"
                android:text="Status :" />

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorPrimaryDisableOnly"
                android:text="Status" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginBottom="-5dp"
                android:text="Action by :" />

            <TextView
                android:id="@+id/actionBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorPrimaryDisableOnly"
                android:text="Action by" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginBottom="-5dp"
                android:text="Time :" />

            <TextView
                android:id="@+id/timeStamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorPrimaryDisableOnly"
                android:text="Time" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginBottom="-5dp"
                android:text="Distance :" />

            <TextView
                android:id="@+id/distanceV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorPrimaryDisableOnly"
                android:text="Distance" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>