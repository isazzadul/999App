<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_on_primary_disabled"
    android:fitsSystemWindows="true"
    android:layout_alignParentBottom="true"
    tools:context=".SignUp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="Sign Up"
            android:textColor="?android:textColorPrimaryDisableOnly"
            android:textSize="50sp"
            android:fontFamily="sans-serif-medium"
            />

        <LinearLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            android:padding="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="30dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp"
                android:gravity="right"
                android:windowSoftInputMode="adjustResize"
                android:background="@drawable/transparent_shape">

                <EditText
                    android:id="@+id/id"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_textinput"
                    android:ems="10"
                    android:hint="Unique ID"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp" />

                <EditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_textinput"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp" />


            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next"
                android:layout_gravity="right"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/round_button_black"
                android:textColor="?android:textColorPrimaryInverse"
                android:textSize="17sp"
                android:text="next"
                android:windowSoftInputMode="adjustResize"/>
        </LinearLayout>
        <LinearLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
            android:visibility="gone"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:gravity="right"
            android:windowSoftInputMode="adjustResize"
            android:background="@drawable/transparent_shape">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_textinput"
                android:ems="10"
                android:hint="Your Name"
                android:inputType="textPersonName"
                android:paddingLeft="20dp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_textinput"
                android:ems="10"
                android:hint="Phone"
                android:inputType="textPersonName"
                android:paddingLeft="20dp" />
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_textinput"
                android:ems="10"
                android:hint="Your Email"
                android:inputType="textPersonName"
                android:paddingLeft="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginRight="50dp"
                    android:textColor="@color/black"
                    android:text="Gender" />

                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="male" />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="female" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:padding="15dp"
            android:background="@drawable/transparent_shape"
            android:gravity="center">
            <EditText
                android:id="@+id/mnum"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_textinput"
                android:ems="10"
                android:hint="Father's Contact number"
                android:inputType="textPersonName"
                android:paddingLeft="20dp" />
            <EditText
                android:id="@+id/fnum"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_textinput"
                android:ems="10"
                android:hint="Mother's Contact number"
                android:inputType="textPersonName"
                android:paddingLeft="20dp" />
            <EditText
                android:id="@+id/emnum"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_textinput"
                android:ems="10"
                android:hint="Emergency Contact Number"
                android:inputType="textPersonName"
                android:paddingLeft="20dp" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/goNext"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/round_textinput"
                    app:srcCompat="?attr/actionModeCloseDrawable" />
                <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:background="@drawable/round_button_black"
            android:textColor="?android:textColorPrimaryInverse"
            android:textSize="17sp"
            android:text="Register"
            android:windowSoftInputMode="adjustResize"/>
            </LinearLayout>
    </LinearLayout>

    </LinearLayout>

</ScrollView>